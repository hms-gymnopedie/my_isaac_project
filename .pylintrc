# =============================================================================
# Pylint Configuration
# =============================================================================
#
# Pylint은 포괄적인 Python 코드 분석 도구입니다.
#
# 사용법:
#   pylint scripts/
#   pylint --rcfile=.pylintrc scripts/
#
# =============================================================================

[MAIN]
# 병렬 처리 (0 = 자동 감지)
jobs = 0

# 무시할 디렉토리
ignore = CVS, .git, __pycache__, .mypy_cache, data, assets

# 무시할 패턴
ignore-patterns = test_.*\.py

# Python 버전
py-version = 3.11

# 확장 모듈 (Isaac Sim 관련)
extension-pkg-allow-list = numpy, cv2, torch, pxr

[MESSAGES CONTROL]
# 비활성화할 메시지
# C0114: missing-module-docstring (모듈 docstring 필수 아님)
# C0115: missing-class-docstring (클래스 docstring 필수 아님)  
# C0116: missing-function-docstring (함수 docstring 필수 아님)
# R0903: too-few-public-methods (데이터 클래스에서 흔함)
# R0913: too-many-arguments (Isaac Sim API에서 흔함)
# W0511: fixme (TODO 주석 허용)
# E1101: no-member (동적 모듈에서 오탐)
disable = 
    C0114,
    C0115,
    C0116,
    R0903,
    R0913,
    W0511,
    E1101,
    import-error,
    no-name-in-module

[FORMAT]
# 최대 줄 길이
max-line-length = 100

# 들여쓰기 문자 수
indent-string = '    '

# 최대 모듈 라인 수
max-module-lines = 2000

[BASIC]
# 좋은 변수 이름 (짧은 이름 허용)
good-names = i, j, k, x, y, z, t, dt, id, fn, _

# 인자 이름 스타일
argument-naming-style = snake_case

# 변수 이름 스타일
variable-naming-style = snake_case

# 함수 이름 스타일
function-naming-style = snake_case

# 클래스 이름 스타일
class-naming-style = PascalCase

# 상수 이름 스타일
const-naming-style = UPPER_CASE

[DESIGN]
# 최대 인자 수
max-args = 10

# 최대 지역 변수 수
max-locals = 20

# 최대 반환 문 수
max-returns = 8

# 최대 분기 수
max-branches = 15

# 최대 문장 수
max-statements = 60

# 최대 부모 클래스 수
max-parents = 7

# 최대 속성 수
max-attributes = 15

# 최대 public 메서드 수
max-public-methods = 25

[SIMILARITIES]
# 중복 코드 검사 - 최소 줄 수
min-similarity-lines = 6

# 중복 검사에서 import 무시
ignore-imports = yes

# 중복 검사에서 docstring 무시
ignore-docstrings = yes

[TYPECHECK]
# 동적으로 설정된 멤버 무시 (Isaac Sim 관련)
ignored-classes = 
    numpy,
    torch,
    pxr.Usd,
    pxr.UsdGeom,
    omni.isaac,
    isaacsim
